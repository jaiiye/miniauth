  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.11</version>
      <scope>test</scope>
    </dependency>
  </dependencies>

  <modules>
    <module>miniauth-core</module>
    <module>miniauth-oauth</module>
    <module>miniauth-oauth2</module>
    <module>miniauth-web</module>
