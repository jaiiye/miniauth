  </build>

  <reporting>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-javadoc-plugin</artifactId>
        <version>2.9.1</version>
        <configuration>
<!--
        <stylesheetfile>${basedir}/src/main/javadoc/stylesheet.css</stylesheetfile>
-->
          <show>public</show>
